// multilevel using scanner function
import java.util.*;
class Palani {
    String area;
    void hos(){
        System.out.println("Enter the area"+area);
    }
}
class Sanjeev extends Palani{
    String area1;
    void hos(){
        System.out.println("Enter the area"+area1);
    }
}

class swea extends Sanjeev{
    String area2;
    void hos(){
        System.out.println("Enter the area : "+area2);
    }
}
class Main{
    public static void main (String[] args) {
     Scanner sc=new Scanner(System.in);
     System.out.print("Enter the area 1 : ");
     String area=sc.nextLine();
     System.out.print("Enter the area 2 : ");
     String area1=sc.nextLine();
     System.out.print("Enter the area 3 : ");
     String area2=sc.nextLine();
     swea s=new swea();
     s.area=area;
     s.area1=area1;
     s.area2=area2;
     s.hos();
    }
}

**************************************************************************************
// over load Method
class Cal{
    int add(int a,int b){
    return a+b;
    }
    int add(int a, int b, int c){
        return a+b+c;
    }
    double add(double a,double b){
        return a+b;
    }
}
public class Main
{
	public static void main(String[] args) {
		Cal ca= new Cal();
		System.out.println(ca.add(5,10));
		System.out.println(ca.add(5,10,15));
		System.out.println(ca.add(5.5,2.5));
	}
}
